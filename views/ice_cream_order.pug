extends layout

block content
  h2 Ice Cream Ordering Form
  form(method="post", action="/api/icecreams")
    fieldset
      legend Ice Cream Information
      p
        label(for='size') Size:
        select(name='size')
          each size in sizes
            option(value= size.name) #{size.name}
      p
        label(for='flavor') Available Flavors
        select(name='flavor')
          each flavor in flavors
            option(value= flavor.name) #{flavor.name}
      p
        label(for='quantity') Quantity
          input(type='number', name='quantity', value='1')
      p
        button.btn.btn-secondary(type='button') Add another Flavor
      p
        input(type='submit', value="Add to cart")
