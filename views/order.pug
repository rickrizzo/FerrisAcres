extends layout
block content
  h2 Order Lookup
  h4 Placed: #{order.placed.toLocaleString()}
  h4 Pickup Date: #{order.pickup.toLocaleString()}
  table
    tr
      th Item
      th Size
      th Quantity
      th Price

    each item in cakes
      tr
        td #{item.type} #{item.color_one} & #{item.color_two} Cake
        td #{item.size.replace('_', '" ')}
        td 1
        td #{item.price}
    each item in icecreams
      tr
        td #{item.flavor} Ice Cream
        td #{item.size}
        td #{item.quantity}
        td #{item.price}
