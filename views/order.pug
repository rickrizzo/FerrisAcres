extends layout

block content
  h2 Order
  table(class='table table-striped table-responsive')
    thead
      tr
        th Item
        th Size
        th Quantity
        th Style
        th Price
    tbody
      each item in cakes
        tr
          td #{item.type} #{item.color_one} & #{item.color_two} Cake
          td #{item.size.replace('_', '" ')}
          td 1
          td #{item.cake_number}
          td #{item.price}
      each item in icecreams
        tr
          td #{item.flavor} Ice Cream
          td #{item.size}
          td #{item.quantity}
          td
          td #{item.price}
      tr
        td Total
        td
        td
        td
        td $#{sum.toFixed(2)}

  h2 Contact
  p #{user.name}
  p Email: #{user.email}
  p Phone Number: #{user.phone}
